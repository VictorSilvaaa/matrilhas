  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAl6aVck02AcArAks6GwG1mpLJk6pTGoSU"></script>
  <script>
    function initMap() {
      var saoluis = {lat: -2.538, lng: -44.282};
      var map = new google.maps.Map(document.getElementById('map-saoluis'), {
        zoom: 12,
        center: saoluis
      });
      var marker = new google.maps.Marker({
        position: saoluis,
        map: map
      });
    }
  </script>
</head>
